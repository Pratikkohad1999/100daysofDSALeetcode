class Solution {
    public int climbStairs(int n) {
        if (n <= 1) {
            return 1;
        }
        
        int[] a = new int[n + 1];
        a[0] = 1;
        a[1] = 1;
        
        for (int b = 2; b <= n; b++) {
            a[b] = a[b - 2] + a[b - 1];
        }
        
        return a[n];
    }
}

