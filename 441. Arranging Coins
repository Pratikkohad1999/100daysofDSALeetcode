class Solution:
    def arrangeCoins(self, n: int) -> int:
        top = 0
        bottom = n
         
        while top + 1 < bottom:
            middle = top + (bottom - top) // 2
            
            
            if middle * (middle + 1) // 2 <= n:
                top = middle
            else:
                bottom = middle
                
        if bottom * (bottom + 1) // 2 <= n:
            return bottom
            
        return top
